---
import ThemeToggle from "../ui/theme-toggle.astro";
---

<header
  class="w-full max-w-5xl mx-auto px-6 sm:px-12 py-6 flex items-center justify-between"
>
  <a
    href="/"
    class="text-xl font-bold font-mono tracking-tight text-ui-900 dark:text-ui-100 hover:text-crimson-500 transition-colors"
  >
    Mastwal Mesfin's<span class="text-crimson-500">.</span>portfolio
  </a>

  <nav class="flex items-center gap-6">
    <div
      class="hidden sm:flex gap-6 text-sm font-medium text-ui-600 dark:text-ui-400"
    >
      <a
        href="#work"
        class="hover:text-crimson-500 dark:hover:text-crimson-400 transition-colors"
        >Work</a
      >
      <a
        href="#projects"
        class="hover:text-crimson-500 dark:hover:text-crimson-400 transition-colors"
        >Projects</a
      >
      <a
        href="#skills"
        class="hover:text-crimson-500 dark:hover:text-crimson-400 transition-colors"
        >Skills</a
      >
    </div>

    <div class="h-6 w-px bg-ui-200 dark:bg-ui-800 hidden sm:block"></div>

    <ThemeToggle />
  </nav>
</header>
